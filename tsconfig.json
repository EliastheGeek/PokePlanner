{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": false,
        "jsx": "react-jsx",
        "allowJs": true,
        "checkJs": false,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
        "@/*": ["./src/*"],
        "@repo/*": ["./src/components/ai/*"] 
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}